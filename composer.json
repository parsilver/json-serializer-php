{
    "name": "farzai/json-serializer",
    "description": "High-performance JSON serializer for PHP with streaming support, type-safe object mapping, and memory-efficient processing",
    "keywords": [
        "json",
        "serializer",
        "serialization",
        "php",
        "streaming",
        "type-safe",
        "object-mapping",
        "performance",
        "encoder",
        "decoder",
        "marshaller",
        "unmarshaller"
    ],
    "homepage": "https://github.com/parsilver/json-serializer-php",
    "license": "MIT",
    "authors": [
        {
            "name": "parsilver",
            "email": "parkorn@farzai.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "pestphp/pest": "^4.0",
        "phpbench/phpbench": "^1.3",
        "phpstan/phpstan": "^2.0",
        "spatie/ray": "^1.28",
        "vimeo/psalm": "^6.0"
    },
    "suggest": {
        "psr/simple-cache": "For optional PSR-16 metadata caching support"
    },
    "autoload": {
        "psr-4": {
            "Farzai\\JsonSerializer\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Farzai\\JsonSerializer\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": [
            "@putenv XDEBUG_MODE=coverage",
            "vendor/bin/pest --coverage",
            "cat build/coverage.txt"
        ],
        "test-coverage-html": [
            "@putenv XDEBUG_MODE=coverage",
            "vendor/bin/pest --coverage-html build/coverage",
            "cat build/coverage.txt"
        ],
        "format": "vendor/bin/pint",
        "analyse": [
            "@phpstan",
            "@psalm"
        ],
        "phpstan": "vendor/bin/phpstan analyse",
        "psalm": "vendor/bin/psalm",
        "bench": "vendor/bin/phpbench run --report=default"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
